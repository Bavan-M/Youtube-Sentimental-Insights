{
  "manifest_version": 3,
  "name": "YouTube Sentiment Analyzer",
  "version": "1.0",
  "description": "Analyze sentiment of YouTube comments.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
